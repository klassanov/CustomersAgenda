@using CustomersAgenda.WebUI.ViewModels
@model IEnumerable<CustomerViewModel>

@{
    ViewBag.Title ="LabelCustomersList";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create", "Create",  null, new {@class="btn btn-primary"})
</p>
<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td class="text-right">
            @Html.DisplayFor(modelItem => item.DueAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Payments", "Payments", new { id=item.Id })            
        </td>
        <td>
            @using (Html.BeginForm("Delete", "Customer", FormMethod.Post, new { @class = "inline-form" }))
            {
                @Html.Hidden("id", item.Id)
                <button type="submit" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>
                    @WebResources.LabelDelete
                </button>
            }
        </td>
    </tr>
}

</table>
